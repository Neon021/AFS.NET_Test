@using AFS.NET_Test.Models

@model IEnumerable<Record>
@{
    ViewData["Title"] = "Records";
}
<partial name="_Notifications" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movie List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Add Record
            </a>
        </div>
    </div>
</div>
<body>
    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>
                    Input Text
                </th>
                <th>
                    Translated
                </th>
                <th>
                    Created 
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Input
                    </td>
                    <td width="30%">
                        @obj.Output
                    </td>
                    <td width="50%">
                        @obj.Date
                    </td>
                    <td>
                <div class="w-75 btn-group" role="group">
                <a asp-controller="Record" asp-action="Delete" asp-route-id="@obj.Id">
                <i class="bi bi-trash3"></i>  Delete
                </a>
                </div>
                </td>
                </tr>
            }
        </tbody>
    </table>
</body>